<!doctype html>
<html>
<head>
    <title>Login</title>
    <% include ../partials/common_styles.ejs %>
</head>
<body>

    <% include ../partials/navbar.ejs %>

    <div class="container">

        <div class="col-sm-6 col-sm-offset-3">

            <h1>Login</h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input id="email" type="text" class="form-control" name="email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input id="password" type="password" class="form-control" name="password" required>
                </div>

                <button type="submit" class="btn btn-warning btn-lg">Login</button>
            </form>

            <hr>

        </div>

    </div>

    <div class="container">

        <div class="text-center">

            <p>Need an account? <a href="/signup">Signup</a></p>

            <p>Or Login/Register with:</p>

            <span style="display: inline">
                <a href="/auth/facebook" class="btn btn-primary" style="background-color: #3b5998; border: none;">
                    <span class="fa fa-facebook" style="position: relative; top: 1px;"></span> facebook
                </a>
                <a href="/auth/twitter" class="btn btn-primary" style="background-color: #55acee; border: none;">
                    <span class="fa fa-twitter" style="position: relative; top: 1px;"></span> twitter
                </a>
                <a href="/auth/google" class="btn btn-primary" style="background-color: #dd4b39; border: none;">
                    <span class="fa fa-google" style="position: relative; top: 1px;"></span> google
                </a>
            </span>

        </div>

    </div>
</body>
</html>